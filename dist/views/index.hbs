<div class="container frontpage-container" id="Products">
    <h4 class="text-divider">
        <span>Vörur</span>
    </h4>
    <div class="row">
        {{#each products}}
        {{#if this.stock}}
        <div class="col-lg-4" data-id="{{this.id}}" data-title="{{ this.name }}" data-stock="{{ this.stock }}">
            <img src="{{this.image}}" alt="" class="front-product-image">
            <h3 id="product-title">{{ this.name }}</h3>
            <p id="product-price">{{ this.price }} ISK</p>
            <button type="button" class="btn btn-default product-karfa-btn karfa-btn" id="p3-add-to-cart">Bæta við körfu</button>
        </div>
        {{else}}
        <div class="col-lg-4" data-id="{{this.id}}" data-title="{{ this.name }}" data-stock="{{ this.stock }}">
            <img src="{{this.image}}" alt="" class="front-product-image">
            <h3 id="product-title">{{ this.name }}</h3>
            <p id="product-price">{{ this.price }} ISK</p>
            <h4>Uppselt</h4>
        </div>
        {{/if}}
        {{/each}}
    </div>
</div>

